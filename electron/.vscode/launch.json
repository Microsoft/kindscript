{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug main.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.js",
            "args": [
                "--npm-start"
            ],
            "cwd": "${workspaceRoot}/src",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
        },
        {
            "name": "Debug gulpfile.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/gulpfile.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Debug rebuild-native.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/dev_tools/rebuild-native.js",
            "cwd": "${workspaceRoot}"
        }
    ]
}